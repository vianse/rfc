<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.css" />
<style type="text/css">
.nav{
  /* Rectangle 1: */
background: #FFFFFF;
border: 1px solid #D9E3F0;
top: 0px;
height: 80px;
}
.session{
  /* Has iniciado sesión : */
    font-family: Helvetica;
    font-size: 12px;
    color: #697689;
    line-height: 14px;
    position: relative;
    left: 65%;
    top:14px;
}
.column_left{
  /* Left_column: */
  background: #FFFFFF;
  border: 1px solid rgba(151,151,151,0.40);
  position: relative;
  float: left;
  width: 20%;
  height:100vh;
}
.column_right{
  /* Left_column: */
  background: #FFFFFF;
  border: 1px solid rgba(151,151,151,0.40);
  float: right;
  width: 79%;
  height:100vh;
}
.empresa{
  /* Pepe Pizza SA de CV: */
font-family: Helvetica;
font-size: 38px;
color: #697689;
line-height: 58px;
}
.subtitulo{
/* Listado de Datos: */
font-family: AvenirNext-DemiBold;
font-size: 36px;
color: #2CCCE4;
line-height: 49px;
}
.borde_table{
/* Rectangle 8: */
background: #FFFFFF;
border: 1px solid #979797;
}
.text_table_head{
  /* Nombre o razón socia: */
font-family: Helvetica;
font-size: 14px;
color: #697689;
line-height: 17px;

}
.celda{
/* Rectangle 8: */
background: #FFFFFF;
border: 1px solid #979797;
padding: 20px;
}
.celda_contenido{
    font-family: Helvetica;
    font-size: 12px;
    color: #697689;
    line-height: 14px;
    padding: 5px;
}
</style>

<div class="nav">
<p class="navbar-text pull-right">
<% if usuario_signed_in? %>
      <span class="session">Has iniciado sesión como <strong><%= current_usuario.email %></strong>.
        <%= link_to 'Edit profile', edit_usuario_registration_path, :class => 'navbar-link' %> |
        <%= link_to "Logout", destroy_usuario_session_path, method: :delete, :class => 'navbar-link'  %>
      <% else %>
        <%= link_to "Sign up", new_usuario_registration_path, :class => 'navbar-link'  %> |
        <%= link_to "Login", new_usuario_session_path, :class => 'navbar-link'  %>
      <% end %>
     </span>
</div>
<div>
<div class="column_left"></div>
<div class="column_right">
  <span class="empresa">Pizzas Pepe SA de CV</span>
<div class="subtitulo">Listado de Datos</div>

<table class="borde_table">
  <thead class="text_table_head">
    <tr>
      <th class="celda">Nombre o Razón Social</th>
      <th class="celda">Rfc</th>
      <th class="celda">Dirección</th>
      <th class="celda">Teléfono</th>
      <th class="celda">Email</th>
      <th class="celda">Código Postal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @myrfcs.each do |myrfc| %>
      <tr>
        <td class="celda_contenido"><%= myrfc.name %></td>
        <td class="celda_contenido"><%= myrfc.rfc %></td>
        <td class="celda_contenido"><%= myrfc.address %></td>
        <td class="celda_contenido"><%= myrfc.phone %></td>
        <td class="celda_contenido"><%= myrfc.email %></td>
        <td class="celda_contenido"><%= myrfc.cp %></td>
        <td ><%= link_to 'Show', myrfc %></td>
        <td><%= link_to 'Edit', edit_myrfc_path(myrfc) %></td>
        <td><%= link_to 'Destroy', myrfc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>


